<!--components/song-item-v1.wxml-->
<!-- 推荐歌曲下面的歌曲 -->
<view class="song-item" bindtap="onSongItemTap">
  <image class="image" src="{{itemData.al.picUrl}}" mode="widthFix" />
  <view class="info">
    <view class="name">
      {{itemData.name}}
    </view>
    <view class="singer">
      {{itemData.ar[0].name}}
    </view>
  </view>
  <view class="icon">
      <image class="icon" src="/assets/images/icons/arrow-right.png" mode="" />
    </view>
</view>