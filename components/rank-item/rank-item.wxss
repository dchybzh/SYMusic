/* components/rank-item/rank-item.wxss */
.rank {
  display: flex;
  justify-content: space-between;
  height: 100%;
  background-color: rgb(236, 236, 236);
  margin-bottom: 25rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.rank .album {
  position: relative;
  width: 220rpx;
  height: 220rpx;
  background-size: cover;

}

.image {
  /* 注意：如果给宽设置百分比，下面会多出来一截，所以这里设置固定宽高 */
  width: 100%;
  height: 100%;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.rank .count {
  position: absolute;
  right: 0;
  bottom: 0;
  color: #fff;
  font-size: 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 8rpx;
  border-radius: 10rpx;
}

.rank .content {
  padding-left: 25rpx ;
  padding-top: 25rpx ;
  overflow: hidden;
}
.name {
  font-size: 30rpx;
  font-weight: 500rpx;
  margin-bottom: 9rpx;
}

.list .item {
  font-size: 24rpx;
  line-height: 40rpx;

  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.list .item .singer {
  font-size: 22rpx;
  color: #666;
}