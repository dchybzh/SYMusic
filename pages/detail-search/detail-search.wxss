/* pages/detail-search/detail-search.wxss */
page {
  /* 写法一：搜索框颜色 */
  --search-background-color: #fff;
  --search-padding: 20rpx 0;
  box-sizing: border-box;
  padding: 0 24rpx;
}

.hot-search {
  margin-top: 25rpx;
}
.hot-search .title {
  font-size: 40rpx;
  font-weight: 500;
  padding-bottom: 25rpx;
}
.item {
  display: inline-block;
  font-size: 26rpx;
  background-color: #fff;
  padding: 15rpx;
  margin-bottom: 15rpx;
  margin-right: 30rpx;
  border-radius: 40rpx;
}